%h1
  = slurl(@sensor)
.visitors
  %table
    - for visit in current_visitors(@sensor)
      %tr
        %td
          = link_to_profile(visit.avatar)
        %td
          = visit.created_at.to_s
        %td
          = visit_duration(visit)

= link_to 'Edit',  url(:edit_sensor,  @sensor)
|
= link_to 'Back', url(:sensors)
